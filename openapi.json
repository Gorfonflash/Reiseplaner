{
  "openapi": "3.0.3",
  "info": {
    "title": "Reiseplaner API",
    "version": "1.0.0",
    "description": "API f√ºr Orte, Wetter, Routen und Vorschl√§ge.",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "https://reiseplaner.onrender.com"
    }
  ],
  "paths": {
    "/vorschlag": {
      "get": {
        "operationId": "aktivitaetVorschlagen",
        "summary": "Aktivit√§tsvorschl√§ge basierend auf Wetter und Interessen",
        "parameters": [
          {
            "name": "ort",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "Bern"
            },
            "required": false,
            "description": "Stadtname"
          },
          {
            "name": "zeit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 2
            },
            "required": false,
            "description": "Zeitbudget in Stunden"
          },
          {
            "name": "interessen",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "required": false,
            "description": "Kommagetrennte Interessen"
          },
          {
            "name": "format",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "required": false,
            "description": "\"json\" f√ºr strukturiertes Ergebnis"
          }
        ],
        "responses": {
          "200": {
            "description": "Empfehlungen als Text oder JSON",
            "content": {
              "application/json": {
                "example": {
                  "ort": "Bern",
                  "zeit": 2,
                  "wetter": "klar",
                  "vorschlaege": [
                    {
                      "name": "museum",
                      "tags": [
                        "familie",
                        "paar"
                      ]
                    },
                    {
                      "name": "kino",
                      "tags": [
                        "familie",
                        "paar"
                      ]
                    }
                  ]
                }
              },
              "text/plain": {
                "example": "üìç Ort: Bern\nüïí Zeitbudget: 2h\n..."
              }
            }
          }
        }
      }
    },
    "/orte": {
      "get": {
        "operationId": "orteFinden",
        "summary": "Orte eines Typs in einer Stadt",
        "parameters": [
          {
            "name": "ort",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "Bern"
            },
            "required": false,
            "description": "Stadtname"
          },
          {
            "name": "typ",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "museum"
            },
            "required": false,
            "description": "Ortstyp"
          },
          {
            "name": "maxDist",
            "in": "query",
            "schema": {
              "type": "integer"
            },
            "required": false,
            "description": "Maximale Entfernung in Metern"
          }
        ],
        "responses": {
          "200": {
            "description": "Antwort von Google Places",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/geocode": {
      "get": {
        "operationId": "adresseGeocodieren",
        "summary": "Geokoordinaten zu einer Adresse",
        "parameters": [
          {
            "name": "adresse",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "required": false,
            "description": "Adresse"
          }
        ],
        "responses": {
          "200": {
            "description": "Geocodergebnis",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/poi": {
      "get": {
        "operationId": "poiFinden",
        "summary": "Sehensw√ºrdigkeiten in der N√§he",
        "parameters": [
          {
            "name": "lat",
            "in": "query",
            "schema": {
              "type": "number"
            },
            "required": true,
            "description": "Breitengrad"
          },
          {
            "name": "lng",
            "in": "query",
            "schema": {
              "type": "number"
            },
            "required": true,
            "description": "L√§ngengrad"
          },
          {
            "name": "typ",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "tourist_attraction"
            },
            "required": false,
            "description": "Ortstyp"
          }
        ],
        "responses": {
          "200": {
            "description": "Antwort von Google Places",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/route": {
      "get": {
        "operationId": "routeBerechnen",
        "summary": "Route zwischen zwei Punkten",
        "parameters": [
          {
            "name": "start",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Startort"
          },
          {
            "name": "ziel",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Zielort"
          },
          {
            "name": "modus",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "driving"
            },
            "required": false,
            "description": "Fortbewegungsmodus"
          }
        ],
        "responses": {
          "200": {
            "description": "Routendaten oder Hinweis auf gleiche Orte",
            "content": {
              "application/json": {
                "examples": {
                  "identisch": {
                    "value": {
                      "message": "Start und Ziel identisch"
                    }
                  },
                  "google": {
                    "value": {
                      "routes": []
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Fehlende Parameter",
            "content": {
              "application/json": {
                "examples": {
                  "missing": {
                    "value": {
                      "error": "Start oder Ziel fehlt"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/transportzeit": {
      "get": {
        "operationId": "transportzeitBerechnen",
        "summary": "√ñV-Reisezeit zwischen zwei Orten",
        "parameters": [
          {
            "name": "userOrt",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Startort"
          },
          {
            "name": "zielOrt",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Zielort"
          }
        ],
        "responses": {
          "200": {
            "description": "Reisezeit oder Hinweis auf gleiche Orte",
            "content": {
              "application/json": {
                "examples": {
                  "identisch": {
                    "value": {
                      "message": "Start und Ziel identisch"
                    }
                  },
                  "zeit": {
                    "value": {
                      "dauer": "10 min",
                      "abfahrt": "12:00"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Fehlende Parameter",
            "content": {
              "application/json": {
                "examples": {
                  "missing": {
                    "value": {
                      "error": "Start oder Ziel fehlt"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/wetter": {
      "get": {
        "operationId": "wetterAbrufen",
        "summary": "Aktuelles Wetter f√ºr einen Ort",
        "parameters": [
          {
            "name": "ort",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "Bern"
            },
            "required": false,
            "description": "Stadtname"
          }
        ],
        "responses": {
          "200": {
            "description": "Wetterdaten",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    },
    "/foto": {
      "get": {
        "operationId": "fotoUrl",
        "summary": "Gibt eine Google-Photo-URL zur√ºck",
        "parameters": [
          {
            "name": "reference",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "photo_reference aus Places API"
          },
          {
            "name": "maxwidth",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 400
            },
            "required": false,
            "description": "Breite des Bildes"
          }
        ],
        "responses": {
          "200": {
            "description": "URL",
            "content": {
              "application/json": {}
            }
          },
          "400": {
            "description": "Fehlende reference"
          }
        }
      }
    },
    "/tagesablauf": {
      "get": {
        "operationId": "tagesablaufGenerieren",
        "summary": "Erzeugt einen einfachen Tagesplan",
        "parameters": [
          {
            "name": "start",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "09:00"
            },
            "required": false,
            "description": "Startzeit HH:mm"
          },
          {
            "name": "tz",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "Europe/Berlin"
            },
            "required": false,
            "description": "Zeitzone"
          }
        ],
        "responses": {
          "200": {
            "description": "Plan",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    }
  }
}
