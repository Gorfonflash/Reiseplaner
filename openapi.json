{
  "openapi": "3.0.3",
  "info": {
    "title": "Reiseplaner API",
    "version": "1.0.0",
    "description": "API f\u00fcr Orte, Wetter, Routen und Vorschl\u00e4ge."
  },
  "paths": {
    "/vorschlag": {
      "get": {
        "summary": "Aktivit\u00e4tsvorschl\u00e4ge basierend auf Wetter und Interessen",
        "parameters": [
          {
            "name": "ort",
            "in": "query",
            "required": false,
            "schema": { "type": "string", "default": "Bern" },
            "description": "Stadtname"
          },
          {
            "name": "zeit",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "default": 2 },
            "description": "Zeitbudget in Stunden"
          },
          {
            "name": "interessen",
            "in": "query",
            "required": false,
            "schema": { "type": "string" },
            "description": "Kommagetrennte Interessen"
          },
          {
            "name": "format",
            "in": "query",
            "required": false,
            "schema": { "type": "string" },
            "description": "\"json\" f\u00fcr strukturiertes Ergebnis"
          }
        ],
        "responses": {
          "200": {
            "description": "Empfehlungen als Text oder JSON",
            "content": {
              "application/json": {
                "example": {
                  "ort": "Bern",
                  "zeit": 2,
                  "wetter": "klar",
                  "vorschlaege": ["museum", "kino"]
                }
              },
              "text/plain": {
                "example": "\uD83D\uDCCD Ort: Bern\n\uD83D\uDD52 Zeitbudget: 2h\n..."
              }
            }
          }
        }
      }
    },
    "/orte": {
      "get": {
        "summary": "Orte eines Typs in einer Stadt",
        "parameters": [
          {
            "name": "ort",
            "in": "query",
            "required": false,
            "schema": { "type": "string", "default": "Bern" },
            "description": "Stadtname"
          },
          {
            "name": "typ",
            "in": "query",
            "required": false,
            "schema": { "type": "string", "default": "museum" },
            "description": "Ortstyp"
          }
        ],
        "responses": {
          "200": {
            "description": "Antwort von Google Places",
            "content": { "application/json": {} }
          }
        }
      }
    },
    "/geocode": {
      "get": {
        "summary": "Geokoordinaten zu einer Adresse",
        "parameters": [
          {
            "name": "adresse",
            "in": "query",
            "required": false,
            "schema": { "type": "string", "default": "" },
            "description": "Adresse"
          }
        ],
        "responses": {
          "200": {
            "description": "Geocodergebnis",
            "content": { "application/json": {} }
          }
        }
      }
    },
    "/poi": {
      "get": {
        "summary": "Sehensw\u00fcrdigkeiten in der N\u00e4he",
        "parameters": [
          {
            "name": "lat",
            "in": "query",
            "required": true,
            "schema": { "type": "number" },
            "description": "Breitengrad"
          },
          {
            "name": "lng",
            "in": "query",
            "required": true,
            "schema": { "type": "number" },
            "description": "L\u00e4ngengrad"
          },
          {
            "name": "typ",
            "in": "query",
            "required": false,
            "schema": { "type": "string", "default": "tourist_attraction" },
            "description": "Ortstyp"
          }
        ],
        "responses": {
          "200": {
            "description": "Antwort von Google Places",
            "content": { "application/json": {} }
          }
        }
      }
    },
    "/route": {
      "get": {
        "summary": "Route zwischen zwei Punkten",
        "parameters": [
          {
            "name": "start",
            "in": "query",
            "required": false,
            "schema": { "type": "string" },
            "description": "Startort"
          },
          {
            "name": "ziel",
            "in": "query",
            "required": false,
            "schema": { "type": "string" },
            "description": "Zielort"
          },
          {
            "name": "modus",
            "in": "query",
            "required": false,
            "schema": { "type": "string", "default": "driving" },
            "description": "Fortbewegungsmodus"
          }
        ],
        "responses": {
          "200": {
            "description": "Routendaten oder Hinweis auf gleiche Orte",
            "content": {
              "application/json": {
                "examples": {
                  "identisch": { "value": { "message": "Start und Ziel identisch" } },
                  "google": { "value": { "routes": [] } }
                }
              }
            }
          }
        }
      }
    },
    "/transportzeit": {
      "get": {
        "summary": "\u00d6V-Reisezeit zwischen zwei Orten",
        "parameters": [
          {
            "name": "userOrt",
            "in": "query",
            "required": false,
            "schema": { "type": "string" },
            "description": "Startort"
          },
          {
            "name": "zielOrt",
            "in": "query",
            "required": false,
            "schema": { "type": "string" },
            "description": "Zielort"
          }
        ],
        "responses": {
          "200": {
            "description": "Reisezeit oder Hinweis auf gleiche Orte",
            "content": {
              "application/json": {
                "examples": {
                  "identisch": { "value": { "message": "Start und Ziel identisch" } },
                  "zeit": { "value": { "dauer": "10 min", "abfahrt": "12:00" } }
                }
              }
            }
          }
        }
      }
    },
    "/wetter": {
      "get": {
        "summary": "Aktuelles Wetter f\u00fcr einen Ort",
        "parameters": [
          {
            "name": "ort",
            "in": "query",
            "required": false,
            "schema": { "type": "string", "default": "Bern" },
            "description": "Stadtname"
          }
        ],
        "responses": {
          "200": {
            "description": "Wetterdaten",
            "content": { "application/json": {} }
          }
        }
      }
    }
  }
}
